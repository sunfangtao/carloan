<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/colorDeepGray" />
            <solid android:color="@color/colorLightGray" />
            <corners android:radius="5dp" />
            <padding android:bottom="@dimen/shapeBtnTopBottomPadding" android:left="@dimen/shapeBtnLeftRightPadding" android:right="@dimen/shapeBtnLeftRightPadding" android:top="@dimen/shapeBtnTopBottomPadding" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="1dp" android:color="@color/colorDeepGray" />
            <solid android:color="@color/colorWhite" />
            <corners android:radius="5dp" />
            <padding android:bottom="@dimen/shapeBtnTopBottomPadding" android:left="@dimen/shapeBtnLeftRightPadding" android:right="@dimen/shapeBtnLeftRightPadding" android:top="@dimen/shapeBtnTopBottomPadding" />
        </shape>
    </item>
</selector>