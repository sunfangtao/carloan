<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_month_tv"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:textSize="14sp"
        tools:text="2016" />

    <LinearLayout
        android:id="@+id/week_one_layout"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:visibility="gone"
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_height="40dp">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/week_two_layout"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_height="40dp">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/week_three_layout"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_height="40dp">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/week_four_layout"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_height="40dp">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/week_five_layout"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_height="40dp">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/week_six_layout"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:visibility="gone"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        android:layout_height="40dp">
    </LinearLayout>
</LinearLayout>
