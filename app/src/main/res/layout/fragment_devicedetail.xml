<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.sft.view.AlwaysMarqueeTextView
        android:id="@+id/devicedetail_tv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorAccent"
        android:drawableLeft="@mipmap/ic_launcher_round"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_padding_leftright"
        android:textColor="@color/colorWhiteText"
        android:textSize="14sp"
        app:drawableHeight="70dp"
        app:drawableWidth="70dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/devicedetail_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGray"
        android:overScrollMode="never"
        android:scrollbars="none" />

    <Button
        android:id="@+id/devicedetail_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/activity_padding_leftright"
        android:layout_marginRight="@dimen/activity_padding_leftright"
        android:layout_marginTop="16dp"
        android:background="@color/colorAccent"
        android:text="@string/exit" />

</LinearLayout>
