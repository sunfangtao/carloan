    <style name="TextView">
        <item name="android:freezesText">true</item>
    </style>

    <style name="Main_Progress_TextView" parent="TextView">
        <item name="android:textColor">@color/colorGrayText</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginTop">@dimen/mainProgressLayoutDeviderHeight</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Main_Progress_Bar">
        <item name="android:textColor">@color/colorGrayText</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginTop">@dimen/mainProgressLayoutDeviderHeight</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:indeterminate">false</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="Setting_TextView" parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableRight">@mipmap/ic_launcher_round</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="drawableHeight">25dp</item>
        <item name="drawableWidth">25dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="FixPassword_TextView" parent="TextView">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorBlackText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Password_EditText">
        <item name="android:inputType">textPassword</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxLength">18</item>
        <item name="android:digits">0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ
        </item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="FixPassword_EditText" parent="Password_EditText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorGrayText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FixPassword_LinearLayout">
        <item name="android:paddingLeft">@dimen/activity_padding_leftright</item>
        <item name="android:paddingRight">@dimen/activity_padding_leftright</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="Bind_TextView" parent="FixPassword_TextView" />

    <style name="Bind_EditText" parent="FixPassword_EditText" />

    <style name="Bind_LinearLayout" parent="FixPassword_LinearLayout" />

    <style name="Main_RadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/colorWhiteText</item>
        <item name="android:textSize">14sp</item>
        <item name="drawableHeight">20dp</item>
        <item name="drawableWidth">20dp</item>
        <item name="drawableTextCenter">true</item>
    </style>

    <style name="Task_RadioBUtton" parent="Main_RadioButton">
        <item name="android:gravity">center</item>
    </style>

    <style name="My_TextView" parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorBlackText</item>
        <item name="android:textSize">14sp</item>
        <item name="leftDrawableHeight">20dp</item>
        <item name="leftDrawableWidth">20dp</item>
        <item name="rightDrawableHeight">20dp</item>
        <item name="rightDrawableWidth">20dp</item>
        <item name="android:paddingLeft">@dimen/activity_padding_leftright</item>
        <item name="android:paddingRight">@dimen/activity_padding_leftright</item>
    </style>
</resources>